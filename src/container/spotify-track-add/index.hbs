<main class="main main-playlist-add">
    {{#with data}}
    <div class="main__content">
        <h1 class="title title--center">Додати до плейліста</h1>


        <ul class="track__list">
            {{#each tracks}}
            <li class="track">
                <img src="{{image}}" width="92px" height="92px">
                <div class="track__content">
                    <strong class="track__name">{{name}}</strong>
                    <em class="track__author">{{author}}</em>
                </div>

                <form method="POST" action="/spotify-track-add">


                    <input type="hidden" name="playlistId" value="{{../playlistId}}">
                    <input type="hidden" name="trackId" value="{{id}}">

                    <button><img src="/svg/cross_add.svg"></button>
                </form>

            </li>
            {{/each}}
        </ul>



    </div>
    {{/with}}
</main>