<main class="main">

    {{#with data.purchase}}
    <form method="POST" action="/purchase-edit?id={{id}}" class="form-card">
        {{> heading title='Інформація про замовлення'}}

        <div>ID: {{id}}</div>


        <div class="purchase">
            {{> field value=lastname name=lastname label="Прізвище:"}}
            {{> field value=firstname name=firstname label="Ім'я:"}}
            {{> field value=email name=email label="Електронна пошта:"}}
            {{> field value=phone name=phone label="Телефон:"}}
        </div>

        {{> divider}}


        {{> button text='Зберегти дані'}}

    </form>
    {{/with}}


</main>