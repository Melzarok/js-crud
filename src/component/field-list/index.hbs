<a href="/purchase-info?id={{id}}" class="list">
    <div class="list__item--title list__item--id">ID: {{id}}</div>
    <div class="list__item">
        <div class="list__item--title">Товари</div>
        <div>{{product.title}}</div>
    </div>
    <div class="list__item">
        <div class="list__item--title ">Сума замовлення</div>
        <div class="list__item--description">{{totalPrice}}₴</div>
    </div>
    <div class="list__item">
        <div class="list__item--title">Бонус</div>
        <div class="list__item--description">{{bonus}}₴</div>
    </div>
</a>